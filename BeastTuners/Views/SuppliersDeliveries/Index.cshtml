@model IEnumerable<BeastTuners.Models.SuppliersDelivery>

@{
    ViewData["Title"] = "Suppliers Delivery";
}

<h1>Suppliers Delivery</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Create New Delivery</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DeliveryTime)</th>
            <th>@Html.DisplayNameFor(model => model.Supplier)</th>
            <th>@Html.DisplayNameFor(model => model.Part)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DeliveryTime)</td>
                <td>@Html.DisplayFor(modelItem => item.Supplier.SupplierName)</td>
                <td>@Html.DisplayFor(modelItem => item.Part.PartName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SupplierDeliveryID" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.SupplierDeliveryID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.SupplierDeliveryID" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
