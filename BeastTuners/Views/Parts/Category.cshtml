@model IEnumerable<BeastTuners.Models.Part>

@{
    ViewData["Title"] = $"{ViewData["Category"]} Parts";
}

<h1>@ViewData["Category"] Parts</h1>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.PartName)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.StockQuantity)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model)
        {
            <tr>
                <td>@part.PartName</td>
                <td>@part.Price</td>
                <td>@part.StockQuantity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@part.PartID" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@part.PartID" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@part.PartID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Part</a>
</p>