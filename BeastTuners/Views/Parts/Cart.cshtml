@model List<CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h1>Shopping Cart</h1>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Part Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="@item.ImagePath" style="width: 80px; height: auto;" />
                    </td>
                    <td>@item.PartName</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.PartID" class="btn btn-danger btn-sm">❌ Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="ClearCart" class="btn btn-warning">🗑 Clear Cart</a>
}
