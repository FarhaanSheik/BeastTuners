@model List<BeastTuners.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Shopping Cart</h3>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ImagePath))
                                                    {
                                                        <img src="@item.ImagePath" alt="@item.PartName" class="img-thumbnail me-3" style="width: 80px; height: 80px; object-fit: cover;">
                                                    }
                                                    <div>
                                                        <h6 class="mb-0">@item.PartName</h6>
                                                        <small class="text-muted">SKU: @item.PartID</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Price.ToString("C")</td>
                                            <td>
                                                <form asp-action="UpdateCart" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.PartID" />
                                                    <div class="input-group input-group-sm" style="width: 120px;">
                                                        <button type="button" class="btn btn-outline-secondary" onclick="decrementQuantity(@item.PartID)">-</button>
                                                        <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control text-center" id="quantity-@item.PartID" onchange="updateQuantity(@item.PartID)">
                                                        <button type="button" class="btn btn-outline-secondary" onclick="incrementQuantity(@item.PartID)">+</button>
                                                    </div>
                                                </form>
                                            </td>
                                            <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                            <td>
                                                <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.PartID" />
                                                    <button type="submit" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                            </a>
                            <form asp-action="ClearCart" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="fas fa-trash me-2"></i>Clear Cart
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
                            <h4>Your cart is empty</h4>
                            <p class="text-muted">Add some parts to get started!</p>
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-shopping-bag me-2"></i>Shop Now
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-dark text-white">
                        <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>@Model.Sum(item => item.Price * item.Quantity).ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>$15.00</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>GST (15%):</span>
                            <span>@((Model.Sum(item => item.Price * item.Quantity) * 0.15m).ToString("C"))</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong class="text-danger">@((Model.Sum(item => item.Price * item.Quantity) * 1.15m + 15).ToString("C"))</strong>
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Checkout" class="btn btn-success btn-lg w-100">
                                <i class="fas fa-lock me-2"></i>Proceed to Checkout
                            </a>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                Please <a asp-area="Identity" asp-page="/Account/Login" class="alert-link">login</a> to checkout
                            </div>
                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary w-100">
                                <i class="fas fa-sign-in-alt me-2"></i>Login to Checkout
                            </a>
                        }
                    </div>
                </div>

                <!-- Security Badges -->
                <div class="card mt-3">
                    <div class="card-body text-center">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-lock fa-2x text-success mb-2"></i>
                                <p class="small mb-0">Secure Payment</p>
                            </div>
                            <div class="col-4">
                                <i class="fas fa-truck fa-2x text-primary mb-2"></i>
                                <p class="small mb-0">Fast Shipping</p>
                            </div>
                            <div class="col-4">
                                <i class="fas fa-shield-alt fa-2x text-warning mb-2"></i>
                                <p class="small mb-0">Buyer Protection</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function incrementQuantity(partId) {
            var input = document.getElementById('quantity-' + partId);
            input.value = parseInt(input.value) + 1;
            updateQuantity(partId);
        }

        function decrementQuantity(partId) {
            var input = document.getElementById('quantity-' + partId);
            if (parseInt(input.value) > 1) {
                input.value = parseInt(input.value) - 1;
                updateQuantity(partId);
            }
        }

        function updateQuantity(partId) {
            var input = document.getElementById('quantity-' + partId);
            var quantity = parseInt(input.value);

            if (quantity < 1) {
                input.value = 1;
                quantity = 1;
            }

            // Submit the form to update the cart
            var form = input.closest('form');
            var formData = new FormData(form);
            formData.set('quantity', quantity);

            fetch(form.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                }
            }).then(response => {
                if (response.ok) {
                    location.reload(); // Reload to update totals
                }
            });
        }

        // Auto-update when quantity input changes
        document.addEventListener('DOMContentLoaded', function() {
            var quantityInputs = document.querySelectorAll('input[name="quantity"]');
            quantityInputs.forEach(function(input) {
                input.addEventListener('change', function() {
                    var partId = this.id.split('-')[1];
                    updateQuantity(partId);
                });
            });
        });
    </script>

    <style>
        .input-group {
            width: 120px;
        }

            .input-group .btn {
                width: 30px;
            }

            .input-group input {
                text-align: center;
            }

        .img-thumbnail {
            border-radius: 8px;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
        }
    </style>
}
