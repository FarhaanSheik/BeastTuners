@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-3 font-weight-bold text-primary">Welcome to Beast Tuners</h1>
    <p class="lead text-secondary">Your ultimate solution for car parts inventory management.</p>

    <div class="container">
        <div class="row mt-4">
            <!-- Engine -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <a asp-controller="Parts" asp-action="Category" asp-route-category="Engine">
                        <img src="~/images/engine.jpg" class="card-img-top img-fluid part-image" alt="Engine">
                    </a>
                    <div class="card-body text-center">
                        <a asp-controller="Parts" asp-action="Category" asp-route-category="Engine" class="btn btn-primary">Engine Parts</a>
                    </div>
                </div>
            </div>
            <!-- Brakes -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <a asp-controller="Parts" asp-action="Category" asp-route-category="Brakes">
                        <img src="~/images/brakes.jpg" class="card-img-top img-fluid part-image" alt="Brakes">
                    </a>
                    <div class="card-body text-center">
                        <a asp-controller="Parts" asp-action="Category" asp-route-category="Brakes" class="btn btn-primary">Brake Parts</a>
                    </div>
                </div>
            </div>
            <!-- Wheels -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <a asp-controller="Parts" asp-action="Category" asp-route-category="Wheels">
                        <img src="~/images/wheels.jpg" class="card-img-top img-fluid part-image" alt="Wheels">
                    </a>
                    <div class="card-body text-center">
                        <a asp-controller="Parts" asp-action="Category" asp-route-category="Wheels" class="btn btn-primary">Wheel Parts</a>
                    </div>
                </div>
            </div>
            <!-- Exhaust -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <a asp-controller="Parts" asp-action="Category" asp-route-category="Exhaust">
                        <img src="~/images/exhaust.jpg" class="card-img-top img-fluid part-image" alt="Exhaust">
                    </a>
                    <div class="card-body text-center">
                        <a asp-controller="Parts" asp-action="Category" asp-route-category="Exhaust" class="btn btn-primary">Exhaust Parts</a>
                    </div>
                </div>
            </div>
            <!-- Suspension -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <a asp-controller="Parts" asp-action="Category" asp-route-category="Suspension">
