            <!-- Interior -->
            <div class="col-md-4 mb-3">
                <div class="card shadow-sm">
                    <a asp-controller="Parts" asp-action="Category" asp-route-category="Interior">
                        <img src="~/images/interior.jpg" class="card-img-top img-fluid part-image" alt="Interior">
                    </a>
                    <div class="card-body text-center">
                        <a asp-controller="Parts" asp-action="Category" asp-route-category="Interior" class="btn btn-primary">Interior Parts</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5 w-50 mx-auto">
    <p class="mt-4 text-muted">
        Learn about <a href="https://learn.microsoft.com/aspnet/core" class="text-info font-weight-bold" target="_blank">building Web apps with ASP.NET Core</a>.
    </p>
</div>
