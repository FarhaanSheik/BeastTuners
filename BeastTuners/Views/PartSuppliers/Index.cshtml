@model IEnumerable<BeastTuners.Models.PartSupplier>

@{
    ViewData["Title"] = "Index";
}

<h1>PartSuppliers</h1>

<div class="mb-3">

    <a asp-action="Create" class="btn btn-success">Create New Employee</a>

</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Part)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Part.PartName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
            </td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.PartSuppliersID" class="btn btn-warning btn-sm">Edit</a>

                    <a asp-action="Details" asp-route-id="@item.PartSuppliersID" class="btn btn-info btn-sm">Details</a>

                    <a asp-action="Delete" asp-route-id="@item.PartSuppliersID" class="btn btn-danger btn-sm">Delete</a>

                </td>
        </tr>
}
    </tbody>
</table>
