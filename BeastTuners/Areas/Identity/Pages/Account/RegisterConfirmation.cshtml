@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirm Your Email";
}

<div class="container text-center mt-5">
    <h1 class="text-primary">@ViewData["Title"]</h1>
    <hr />

    @if (Model.DisplayConfirmAccountLink)
    {
        <div class="alert alert-info">
            <p>
                Thank you for registering! Since this is a demo environment, we don’t have a real email sender configured.
                Please use the link below to confirm your email manually:
            </p>
            <a id="confirm-link" class="btn btn-success mt-3" href="@Model.EmailConfirmationUrl">
                Confirm Your Account
            </a>
        </div>
        <p class="text-muted">
            Need help? <a href="https://aka.ms/aspaccountconf" target="_blank">See our setup guide</a>.
        </p>
    }
    else
    {
        <div class="alert alert-success">
            <p>
                We've sent a confirmation email to your registered email address. Please check your inbox and follow the instructions to activate your account.
            </p>
        </div>
    }
</div>